<% layout("layout/boilerplate") %>

<div class="row d-flex align-items-center justify-content-center p-4" style="background-color: #f9f9f9; font-family: Arial, sans-serif;">
    <div class="col-7">
        
        
        <div class="mt-5 p-3 border rounded shadow-sm bg-white">
        
            <div class="card mb-3 border-0">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="<%= gmail_temp.logo %>" alt="Logo" style="width: 100px; height: 100px; border-radius: 50%; border: 2px solid #ddd;">
                </div>
            </div>

          
            <div class="card mb-3 border-0">
                <div class="d-flex align-items-center justify-content-center">
                    <h1 class="card-title text-muted"><%= gmail_temp.title %></h1>
                </div>
            </div>

        <% for(let img of gmail_temp.images) {%>
            <div class="card mb-3 border-0">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="<%= img.url %>" alt="Image" style="width: 100%; height: auto; object-fit: cover; border-radius: 8px;">
                </div>
            </div>
<% } %>
            
            <div class="card mb-3 border-0">
                <div class="d-flex align-items-center justify-content-center">
                    <h4 class="text-muted text-center"><%= gmail_temp.content %></h4>
                </div>
            </div>

           
            <div class="text-end">
                <a class="btn btn-success px-5 py-2" href="/gmail_temp/<%= gmail_temp._id %>/download">Download</a>
            </div>
        </div>
      
    </div>
</div>
